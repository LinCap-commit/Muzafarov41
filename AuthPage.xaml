<Page x:Class="_41_размер.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_41_размер"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин" Grid.Column="0" Grid.Row="0" FontSize="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="auto" Margin="85, 20"></TextBlock>
        <TextBlock Text="Пароль" Grid.Column="0" Grid.Row="1" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Right" Width="auto" Margin="85, 20"></TextBlock>

        <TextBox Name="LoginBox" Grid.Row="0" Grid.Column="1" Width="220" FontSize="27" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,20"></TextBox>
        <TextBox Name="PasswordBox" Grid.Row="1" Grid.Column="1" Width="220" FontSize="27" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,20"></TextBox>

        <Button Name="LoginBtn" Content="Войти" Grid.Column="1" Grid.Row="2" Height="auto" Width="190" FontSize="27" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoginBtn_Click"></Button>
        <Button Name="GuestLoginBtn" Content="Войти как гость" Grid.Column="0" Grid.Row="2" Height="auto" Width="220" FontSize="27" HorizontalAlignment="Center" VerticalAlignment="Center" Click="GuestLoginBtn_Click"></Button>

        <StackPanel Name="Captcha" Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
            <TextBlock Name="captchaOneWord" FontSize="22" Margin="30,0,0,0"></TextBlock>
            <TextBlock Name="captchaTwoWord" FontSize="22" Margin="0,5,0,0" TextDecorations="Strikethrough"></TextBlock>
            <TextBlock Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
            <TextBlock Name="captchaFourWord" FontSize="22" Margin="0,10,0,0" TextDecorations="Strikethrough"></TextBlock>
        </StackPanel>
        
        <TextBox Name="CaptchaAnswer" Grid.Row="2" Grid.Column="1" Width="60" Height="20" HorizontalAlignment="Left" Margin="27,65" VerticalAlignment="Bottom"/>
    
    </Grid>
</Page>
